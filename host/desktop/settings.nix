# ===============================================================
#       DESKTOP HOST SHARED CONFIGURATION
# ===============================================================
{
  # ===============================================================
  #       BASIC CONFIGURATION
  # ===============================================================
  hostName = "desktop";
  stateVersion = "24.11";

  # ===============================================================
  #       LOCALE AND TIME
  # ===============================================================
  timeZone = "Europe/Berlin";
  defaultLocale = "en_US.UTF-8";
  extraLocale = "de_DE.UTF-8";
  keyboardLayout = "us";

  # ===============================================================
  #       HARDWARE CONFIGURATION
  # ===============================================================
  diskDevice = "/dev/nvme0n1";
  persistPath = "/persist";
  bootLoader = "systemd"; # systemd or grub

  # ===============================================================
  #       USERS
  # ===============================================================
  primaryUser = "zen";
  administrators = ["zen"];

  # ===============================================================
  #       THEME AND UI PREFERENCES
  # ===============================================================
  theme = {
    gtk = "Adwaita-dark";
    helix = "ayu_dark";
    zellij = "ayu_dark";
    ghostty = "ayu";
    starship = true;
  };
}
